@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <form enctype="multipart/form-data" asp-action="ValidateContract">
            <div class="form">
                <div class="form-group">
                    <label class="row control-label">Validate file</label>
                    <div class="row">
                        <input type="file" class="form-control-file" name="file" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <input type="submit" value="Validate" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>
    <div class="row">
        <p class="text-info">
            @ViewBag.Message
        </p>
    </div>
</div>
